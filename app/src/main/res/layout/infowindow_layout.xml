<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:padding="5dp" >
    <ImageView
        android:id="@+id/info_window_img"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_location_city_24"
        android:contentDescription="@string/Img_infoWindow_des" />

    <TextView
        android:id="@+id/info_window_msgPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/info_window_img"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:text="@string/new_marker_random"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/info_window_coor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@id/info_window_msgPrincipal"
        android:layout_toEndOf="@id/info_window_img"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:text=""
        android:textColor="@color/black"
        tools:ignore="RtlSymmetry" />
</RelativeLayout>